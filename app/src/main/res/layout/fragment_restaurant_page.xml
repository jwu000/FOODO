<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantPage">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/restaurant_name_restaurant_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restaurant"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/rating_restaurant_page"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rating"/>
        <TextView
            android:id="@+id/rating_num_restaurant_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="60dp"
        android:layout_marginLeft="32dp"
        android:id="@+id/price_dollarsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"

        />

    <com.google.android.gms.maps.MapView
        android:id="@+id/restaurant_map"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"></com.google.android.gms.maps.MapView>


    <TextView
        android:id="@+id/address"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reviews"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <ListView
        android:id="@+id/reviews_results"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/restaurant_preference_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_preference_query"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
    >
        <Button
            android:id="@+id/restaurant_yes"
            android:text="@string/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"/>
        <Button
            android:id="@+id/restaurant_no"
            android:text="@string/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>





</FrameLayout>