<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeEnd">


    <TextView
        android:id="@+id/textView2"
        android:layout_gravity="top|center"
        android:layout_marginTop="10dp"
        android:textSize="16pt"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/final_recipe_name" />

    <ScrollView
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14pt"
                android:text="@string/recipe_steps_header"/>
            <TextView
                android:layout_marginTop="10dp"
                android:text="@string/recipe_steps"
                android:textSize="12pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="20dp"
                android:text="@string/cooktime_header"
                android:textSize="14pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="14pt"
                android:text="@string/price_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_marginTop="520dp"
        android:textSize="14pt"
        android:text="@string/favorite_prompt"
        android:layout_gravity="center|top"
        android:layout_width="350dp"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:layout_marginBottom="80dp"
        android:layout_gravity="center|bottom"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:text="@string/yes_radio"
            android:textSize="12pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:text="@string/no_radio"
            android:textSize="12pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <Button
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        android:text="@string/time_to_eat"
        android:textSize="14pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>